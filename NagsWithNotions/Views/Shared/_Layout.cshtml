@{
    ViewBag.Title = "Nags With Notions";
    var homeUrl = Url.Action("Index", "Home");
    var eventsUrl = Url.Action("Index", "Events");
    var loginUrl = Url.Action("Login", "Account");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <link rel="icon" href="#">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="A site to book a pizza horsebox for events">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/navbar.css" />  <!-- Link to your navbar.css file -->
</head>

<body class="d-flex flex-column h-100 main-bg">
    <!-- Navbar -->
    @Html.Partial("_Header")

    <div class="flex-shrink-0 main-bg position-relative">
        <!-- Display flash messages if any -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }

        <!-- Content Block -->
        @RenderBody()  <!-- This will inject the content of each individual view -->
    </div>

    <!-- Footer -->
    <footer style="background-color: #ffc0cb; color: #333;">
        <div class="footer-top py-4">
            <div class="container">
                <div class="row text-center text-lg-start">
                    <!-- Logo Section -->
                    <div class="col-lg-4 mb-4 mb-lg-0 d-flex flex-column align-items-center align-items-lg-start">
                        <img class="mb-3"
                             src="@Url.Content("~/images/nags-with-notions-logo.webp")"
                             srcset="@Url.Content("~/images/nags-with-notions-logo100x95px.webp")"
                             sizes="100vw"
                             alt="pink horse with Nags logo"
                             style="max-width: 100px;">
                        <p>Sourdough Pizzas from Meath's finest food producers</p>
                    </div>

                    <!-- Contact Section -->
                    <div class="col-lg-4 mb-4 mb-lg-0 d-flex flex-column align-items-center align-items-lg-start">
                        <h6 class="mt-4 mb-3" style="font-weight: bold;">CONTACT</h6>
                        <ul class="list-unstyled" style="padding: 0; margin: 0;">
                            <li class="mb-1">
                                <a href="tel:0863371314" class="text-dark text-decoration-none">Phone: 0863371314</a>
                            </li>
                            <li class="mb-1">
                                <a href="mailto:caroline@nagswithnotions.ie" class="text-dark text-decoration-none">Email: caroline@nagswithnotions.ie</a>
                            </li>
                            <li class="mb-1">
                                <a href="tel:0867506453" class="text-dark text-decoration-none">Phone: 0867506453</a>
                            </li>
                            <li>
                                <a href="mailto:tamara@nagswithnotions.ie" class="text-dark text-decoration-none">Email: tamara@nagswithnotions.ie</a>
                            </li>
                        </ul>
                    </div>

                    <!-- Social Media Section -->
                    <div class="col-lg-4 d-flex flex-column align-items-center align-items-lg-start">
                        <h6 class="mt-4 mb-3" style="font-weight: bold;">FOLLOW US</h6>
                        <ul class="list-unstyled" style="padding: 0; margin: 0;">
                            <li>
                                <a class="text-dark text-decoration-none" aria-label="facebook" href="https://m.facebook.com/p/Nags-with-Notions-Pizza-100094122740703/">
                                    <i class="fa-brands fa-facebook-f"></i> Facebook
                                </a>
                            </li>
                            <li>
                                <a class="text-dark text-decoration-none" aria-label="instagram" href="https://www.instagram.com/nagswithnotions/">
                                    <i class="fa-brands fa-instagram"></i> Instagram
                                </a>
                            </li>
                            <li>
                                <a class="text-dark text-decoration-none" aria-label="github" href="https://github.com/JWalshe86/">
                                    <i class="fa-brands fa-github"></i> Github
                                </a>
                            </li>
                            <li>
                                <a class="text-dark text-decoration-none" aria-label="linkedin" href="https://www.linkedin.com/in/john-walshe86/">
                                    <i class="fa-brands fa-linkedin"></i> Linkedin
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom py-3" style="background-color: #e89bb8;">
            <div class="container">
                <div class="row justify-content-between text-center text-lg-start">
                    <div class="col-auto">
                        <p class="mb-0">Copyrights all rights reserved</p>
                    </div>
                    <div class="col-auto">
                        <p class="mb-0">Designed by <a href="https://github.com/JWalshe86/" class="text-dark text-decoration-none">John</a></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous">
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/ba48ac2667.js" crossorigin="anonymous"></script>
</body>
</html>
