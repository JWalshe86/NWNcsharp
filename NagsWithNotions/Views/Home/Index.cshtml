@{
    ViewBag.Title = "Home"; // Optionally set the page title
}

<head>
    <title>Nags With Notions</title>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css"> <!-- Ensure the correct path for your CSS -->
</head>

<div class="hero-container">
    <div id="hero" class="jumbotron jumbotron-fluid">
        <div id="hero-text" class="container">
            <h6 class="display-4">Nags With Notions</h6>
            <h1 class="lead">Sourdough Pizza using some of Meath's Finest Food Producers</h1>

            <!-- Upcoming Event Banner inside the jumbotron -->
            @{
                // Placeholder for upcoming event logic
                var upcomingEventExists = false; // This should be false since you haven't added the model yet.
            }

            @if (upcomingEventExists)
            {
                <div class="event-banner">
                    <img src="~/images/sample-event.jpg" alt="Sample Event Name" />
                    <div class="event-details">
                        <strong>Upcoming Event:</strong>
                        <a href="#">Sample Event Name</a>
                        <p>Sample Date</p>
                    </div>
                </div>
            }
            else
            {
                <div class="event-banner">
                    <img src="~/images/default-event.jpg" alt="Default Event Image" />
                    <div class="event-details">
                        <strong>No Upcoming Event</strong>
                        <p>Check back later for updates!</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- /.Hero Image End -->
<!-- Include Instagram Posts Section -->
@Html.Partial("instagram_home") <!-- If your partial view is in Views/Shared/ or Views/Home/ -->
